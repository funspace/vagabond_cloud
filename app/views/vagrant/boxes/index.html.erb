<h1>Listing vagrant_boxes</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Short description</th>
      <th>Versions</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @vagrant_boxes.each do |vagrant_box| %>
      <tr>
        <td><%= vagrant_box.name %></td>
        <td><%= vagrant_box.description %></td>
        <td><%= vagrant_box.short_description %></td>
        <td><%= vagrant_box.versions %></td>
        <td><%= link_to 'Show', vagrant_box %></td>
        <td><%= link_to 'Edit', edit_vagrant_box_path(vagrant_box) %></td>
        <td><%= link_to 'Destroy', vagrant_box, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

